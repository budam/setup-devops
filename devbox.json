{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.10.7/.schema/devbox.schema.json",
  "packages": [
    "gh@latest",
    "go@latest",
    "go-task@latest",
    "k9s@latest",
    "kubectl@latest",
    "python312@latest",
    "yq-go@latest",
    "kubent@latest",
    "terragrunt@latest",
    "azure-cli@latest",
    "opentofu@latest",
    "podman@latest",
    "podman-compose@latest",
    "google-cloud-sdk@latest",
    "tmux@latest",
    "neovim@latest",
    "lazygit@latest",
    "fzf@latest",
    "ripgrep@latest",
    "fd@latest",
    "bat@latest",
    "kubecolor@latest",
    "gcc@latest",
    "git@latest",
    "rustup@latest",
    "unzip@latest",
    "kubelogin@latest",
    "eza@latest",
    "tflint@latest",
    "tfsec@latest",
    "pre-commit@latest",
    "terraform-docs@latest",
    "terraform-ls@latest",
    "zoxide@latest"
  ],
  "shell": {
    "init_hook": [
      "export XDG_CONFIG_HOME=$HOME/.config",
      "curl -o ~/.aliases https://raw.githubusercontent.com/budam/setup-devops/main/aliases",
      "curl -o ~/.zshrc https://raw.githubusercontent.com/budam/setup-devops/main/zshrc",
      "curl -o ~/.fzfrc https://raw.githubusercontent.com/budam/setup-devops/main/fzfrc",
      "curl -o  ~/.oh-my-zsh/themes/robbyrussell.zsh-theme https://raw.githubusercontent.com/budam/setup-devops/main/robbyrussell.zsh-theme",
      "source ~/.zshrc"
    ],
    "scripts": {
      "test": ["echo \"Error: no test specified\" && exit 1"]
    }
  }
}
